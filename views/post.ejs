<%- include header %>
<form method="post">

    <div class="form-group">
        <label>标题：</label>
        <input type="text" class="form-control input-length" name="title" placeholder="请输入标题"/>
    </div>

    <div class="form-group">
        <label>标签：</label>
        <input type="text" class="form-control input-length" name="tag1" placeholder="请输入标签1"/>
        <input type="text" class="form-control input-length" name="tag2" placeholder="请输入标签2"/>
        <input type="text" class="form-control input-length" name="tag3" placeholder="请输入标签3"/>
    </div>
    <div class="form-group">
        <label>签到码：</label>
        <input type="text" class="form-control input-length" name="signCode" placeholder="请输入签到码"/>
    </div>
    <div class="form-group">
        <label>活动时间：</label>
        <input type="text" class="form-control input-length" name="actTime" placeholder="请输入活动时间"/>
    </div>
    <label>正文：</label><br/>
    <textarea name="content" rows="20" cols="100"></textarea><br />
    <input class="btn btn-success"  type="submit" value="发表" />
</form>
<%- include footer %>